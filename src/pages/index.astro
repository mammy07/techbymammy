---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="TechByMammy | Home" description="Welcome to my personal portfolio website. Discover my projects and photos.">
    <div class="relative h-[calc(100vh-4rem)] flex items-center justify-center text-center overflow-hidden">
        <div class="absolute inset-0 bg-light-gray dark:bg-navy -z-10"></div>
        <div class="max-w-3xl mx-auto px-4 z-10">
            <h1 class="text-5xl md:text-7xl font-bold text-navy dark:text-white animate-fade-in-up">
                Just some projects I do in my free time
            </h1>
            <p class="mt-6 text-lg md:text-xl text-gray-600 dark:text-gray-300 animate-fade-in-up animation-delay-300">
                Hi, I'm Mammy. A passionate developer building sleek, user-friendly websites and applications.
            </p>
            <div class="mt-10 animate-fade-in-up animation-delay-600">
                <a href="/projects" class="bg-accent-red text-white font-bold py-3 px-8 rounded-lg hover:shadow-2xl hover:scale-105 transform transition-all duration-300">
                    View My Work
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
    }
    .animation-delay-300 {
        animation-delay: 0.3s;
    }
    .animation-delay-600 {
        animation-delay: 0.6s;
    }
</style>